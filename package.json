{
  "name": "validator-sa",
  "version": "0.1.2",
  "description": "Validation and sanitation for strings, specific to South Africa, compare https://github.com/chriso/validator.js for non-South-Africa specific validation and sanitization",
  "main": "lib/validator-sa.js",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf lib coverage",
    "build": "npm run build:std && npm run build:min",
    "build:std": "webpack",
    "build:min": "WEBPACK_ENV=production webpack -p",
    "doc": "jsdoc2md -c ./jsdoc.conf --files 'src/*.js' > api.md",
    "prepublish": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "validation",
    "validator",
    "strings",
    "South Africa"
  ],
  "author": "Chris Oloff <chris@uber5.com> (http://about.uber5.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chris927/validator-sa.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-loader": "6.2.10",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "eslint": "3.13.1",
    "eslint-config-recommended": "1.5.0",
    "eslint-loader": "1.6.1",
    "eslint-plugin-import": "2.2.0",
    "jest": "18.1.0",
    "jsdoc": "3.4.3",
    "jsdoc-to-markdown": "2.0.1",
    "rimraf": "2.5.4",
    "webpack": "1.14.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "dependencies": {
    "ramda": ">0.17.1"
  }
}
